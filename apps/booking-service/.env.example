# ===========================================
# BOOKING SERVICE - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3003
SERVICE_NAME=booking-service

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database for Booking Service
DATABASE_URL=postgresql://booking_user:booking_password_123@localhost:5434/rental_booking
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_DB=rental_booking
POSTGRES_USER=booking_user
POSTGRES_PASSWORD=booking_password_123

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis for booking cache and session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=2

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Auth Service for user verification
AUTH_SERVICE_URL=http://localhost:3001

# Vehicle Service for vehicle availability
VEHICLE_SERVICE_URL=http://localhost:3002

# Payment Service for payment processing
PAYMENT_SERVICE_URL=http://localhost:3004

# Notification Service for booking notifications
NOTIFICATION_SERVICE_URL=http://localhost:3005

# ===========================================
# BUSINESS LOGIC CONFIGURATION
# ===========================================
# Booking time limits (in hours)
MIN_BOOKING_DURATION_HOURS=1
MAX_BOOKING_DURATION_HOURS=168
ADVANCE_BOOKING_LIMIT_HOURS=720

# Cancellation policy (in hours before booking start)
CANCELLATION_DEADLINE_HOURS=2
CANCELLATION_FEE_PERCENTAGE=10

# Booking status update intervals (in minutes)
BOOKING_STATUS_UPDATE_INTERVAL=5

# ===========================================
# API CONFIGURATION
# ===========================================
API_GATEWAY_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=combined

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_BOOKING_MAX_REQUESTS=10
RATE_LIMIT_BOOKING_WINDOW_MS=3600000
