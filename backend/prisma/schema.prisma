generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  USER      // Người dùng thuê xe
  ADMIN     // Quản trị hệ thống
  SUPPORT   // Hỗ trợ khách hàng
}

enum VehicleStatus {
  DRAFT       // Chưa đủ thông tin
  PENDING     // Chờ duyệt
  APPROVED     // Đã được duyệt
  REJECTED     // Bị từ chối
  MAINTENANCE  // Đang trong quá trình bảo trì
  HIDDEN       // Ẩn xe
}

enum LicenseType {
  A1 // Giấy phép lái xe A1
  A2 // Giấy phép lái xe A2
  A3 // Giấy phép lái xe A3
  A4 // Giấy phép lái xe A4
}

enum RentalStatus {
  PENDING_PAYMENT // Chờ thanh toán
  AWAIT_APPROVAL  // Chờ duyệt
  CONFIRMED       // Đã được xác nhận
  ON_TRIP         // Đang trên đường
  COMPLETED       // Đã hoàn thành
  CANCELLED       // Đã hủy
  DISPUTED        // Khi có tranh chấp giữa renter và owner    
}

enum KycStatus {
  PENDING // Chờ duyệt
  APPROVED // Đã được duyệt
  REJECTED // Bị từ chối
  NEEDS_UPDATE // Cần cập nhật
}

enum DisputeStatus {
  OPEN // Mở
  UNDER_REVIEW // Đang xem xét
  RESOLVED_REFUND // Đã được giải quyết và hoàn trả tiền
  RESOLVED_NO_REFUND // Đã được giải quyết và không hoàn trả tiền
  CANCELLED // Đã hủy
}

enum NotificationType {
  SYSTEM // Thông báo hệ thống
  PROMOTION // Thông báo khuyến mãi
  RENTAL_UPDATE // Thông báo cập nhật đơn thuê
  PAYMENT // Thông báo thanh toán
  KYC_UPDATE // Thông báo cập nhật hồ sơ KYC
}

enum TransactionType {
  DEPOSIT // Tiền cọc giữ xe
  PAYMENT // Tiền thuê xe
  REFUND // Tiền hoàn trả khi hủy đơn thuê
  PAYOUT // Tiền thanh toán cho chủ xe  
  PENALTY // Tiền phạt khi hủy đơn thuê
}

enum TransactionStatus {
  PENDING // Chờ thanh toán
  SUCCESS // Thanh toán thành công
  FAILED // Thanh toán thất bại
  REFUNDED // Tiền đã được hoàn trả
}

enum ReviewType {
  RENTER_TO_VEHICLE // Khách review xe (và review chủ xe gián tiếp)
  OWNER_TO_RENTER   // Chủ xe review khách
}

enum AuditAction {
  CREATE // Tạo
  UPDATE // Cập nhật
  DELETE // Xóa
  APPROVE // Duyệt
  REJECT // Từ chối
  LOGIN // Đăng nhập
}

enum AuditTargetType {
  RENTAL // Đơn thuê
  VEHICLE // Xe
  USER // Người dùng
  PAYMENT // Thanh toán
  SYSTEM // Hệ thống
}

enum EvidenceType {
  PICKUP_FRONT // Ảnh khi nhận xe phía trước
  PICKUP_BACK // Ảnh khi nhận xe phía sau
  PICKUP_LEFT // Ảnh khi nhận xe phía trái
  PICKUP_RIGHT // Ảnh khi nhận xe phía phải
  PICKUP_DASHBOARD // Ảnh khi nhận xe phía dashboard
  RETURN_FRONT // Ảnh khi trả xe phía trước
  RETURN_BACK // Ảnh khi trả xe phía sau
  RETURN_LEFT // Ảnh khi trả xe phía trái
  RETURN_RIGHT // Ảnh khi trả xe phía phải
  RETURN_DASHBOARD // Ảnh khi trả xe phía dashboard
  DAMAGE_DETAIL // Ảnh chi tiết về sự cố
}

enum OtpType {
  REGISTER           // Xác thực SĐT khi đăng ký mới
  LOGIN              // Đăng nhập nhanh (nếu hỗ trợ)
  RESET_PASSWORD     // Quên mật khẩu
  VERIFY_PHONE       // Xác thực lại SĐT (cho user cũ update profile)
  CONFIRM_TRANSACTION // Xác thực rút tiền/giao dịch lớn (Bảo mật cao)
}

// ==================== USER & AUTH ====================

model User {
  id                 String    @id @default(cuid())
  phone              String    @unique 
  email              String?   @unique 
  password           String    
  fullName           String?
  avatar             String?
  
  isActive           Boolean   @default(true) 
  isPhoneVerified    Boolean   @default(false)
  role               UserRole  @default(USER)
  
  // Vendor Info
  isVendor           Boolean   @default(false) 
  stripeAccountId    String?   
  stripeStatus       String?   

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  deletedAt          DateTime? // Soft delete

  // Relations
  kyc              Kyc?
  vehicles         Vehicle[]      @relation("OwnerVehicles")
  rentals          Rental[]       @relation("RenterRentals")
  ownerRentals     Rental[]       @relation("OwnerRentals")
  
  reviewsWritten   Review[]       @relation("ReviewAuthor")
  reviewsReceived  Review[]       @relation("ReviewTarget")
  
  auditLogsActed   AuditLog[]     @relation("AuditActor")
  notifications    Notification[]
  transactions     Transaction[]
  deviceTokens     DeviceToken[]

  otps             Otp[] // <--- Thêm dòng này
  files            UserFile[]
  favoriteVehicles VehicleFavorite[] // Xe yêu thích của người dùng
  messages         Message[]      // Tin nhắn của user
  renterChats      Chat[]         @relation("RenterChats") // Chats nơi user là renter
  ownerChats       Chat[]         @relation("OwnerChats")  // Chats nơi user là owner

  @@index([phone])
  @@index([email])
  @@map("users")
}

model Otp {
  id        String   @id @default(cuid())
  
  phone     String   // Định danh chính ở VN (Bắt buộc)
  email     String?  // Optional (nếu user muốn nhận qua email)
  code      String   // Mã 6 số: "123456"
  
  type      OtpType  @default(REGISTER)
  isUsed    Boolean  @default(false) // Chống Replay attack (dùng lại mã cũ)
  expiresAt DateTime // Thời gian hết hạn
  
  createdAt DateTime @default(now())
  
  // Relation (Optional: Chỉ link nếu User đã tồn tại)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([phone, code, isUsed]) // Index để verify nhanh
  @@index([expiresAt]) // Index để job cleanup xóa OTP rác
  @@map("otps")
}

// ==================== KYC ====================

model Kyc {
  id              String      @id @default(cuid())
  userId          String      @unique
  
  citizenId       String?     @unique // Mã số công dân
  fullNameInId    String?
  dob             DateTime?
  addressInId     String?     
  
  driverLicense   String?     @unique // Giấy phép lái xe
  licenseType     LicenseType?
  
  idCardFront     String?
  idCardBack      String?
  licenseFront    String?
  licenseBack     String?
  selfieImg       String?     
  
  status          KycStatus   @default(PENDING)
  rejectionReason String?
  
  reviewedBy      String?     
  reviewedAt      DateTime?
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user            User        @relation(fields: [userId], references: [id])
  
  @@index([status])
  @@map("kyc_records")
}

// ==================== VEHICLE ====================

model Vehicle {
  id              String        @id @default(cuid())
  ownerId         String

  type            String?
  brand           String
  model           String
  year            Int
  color           String
  licensePlate    String        @unique 
  engineSize      Int           
  requiredLicense LicenseType   @default(A1) 

  cavetFront      String?       
  cavetBack       String?
  description     String?       @db.Text
  images          VehicleImage[]

  fullAddress     String?       
  address         String        
  district        String?
  ward            String?      
  city            String?       
  lat             Float
  lng             Float

  pricePerDay     Decimal       @db.Decimal(15, 2)
  depositAmount   Decimal       @default(0) @db.Decimal(15, 2)
  instantBook     Boolean       @default(false)
  deliveryAvailable Boolean     @default(false)

  // delivery config
  deliveryFeePerKm   Decimal?   @default(0) @db.Decimal(10,2)  // VNĐ/km
  deliveryRadiusKm   Int?      // nếu null hoặc 0 => không giới hạn

  status          VehicleStatus @default(DRAFT)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime?     // Soft delete

  owner           User          @relation("OwnerVehicles", fields: [ownerId], references: [id])
  rentals         Rental[]
  reviews         Review[]      // Đánh giá dành cho xe này
  unavailabilities VehicleUnavailability[]
  favorites       VehicleFavorite[] // Xe được yêu thích bởi người dùng

  @@index([status])
  @@index([district, city])
  @@index([lat, lng])
  @@index([pricePerDay])
  @@map("vehicles")
}

model VehicleImage {
  id        String   @id @default(cuid())
  vehicleId String
  url       String
  isPrimary Boolean  @default(false)
  order     Int      @default(0) // Thứ tự ảnh
  
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  @@map("vehicle_images")
}

model VehicleUnavailability {
  id        String   @id @default(cuid())
  vehicleId String
  startDate DateTime
  endDate   DateTime
  reason    String?  
  
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  @@index([vehicleId, startDate, endDate])
  @@map("vehicle_unavailabilities")
}

// ==================== RENTAL (CORE) ====================

model Rental {
  id                String       @id @default(cuid())
  renterId          String
  ownerId           String
  vehicleId         String
  
  startDate         DateTime
  endDate           DateTime
  durationMinutes   Int          // Đổi sang phút để chính xác
  
  // MONEY SNAPSHOTS (Lưu cứng mọi thứ tại thời điểm đặt)
  currency          String       @default("VND")
  pricePerDay       Decimal      @db.Decimal(15, 2) // Giá gốc
  
  deliveryFee       Decimal      @default(0) @db.Decimal(15, 2) // Phí giao xe
  discountAmount    Decimal      @default(0) @db.Decimal(15, 2) // Mã giảm giá
  
  totalPrice        Decimal      @db.Decimal(15, 2) // = (Price * Duration) + Delivery - Discount
  depositPrice      Decimal      @db.Decimal(15, 2) // Tiền cọc giữ
  
  // COMMISSION TRACKING
  platformFeeRatio  Decimal      @default(0.15) @db.Decimal(5, 4) // 0.1500 = 15%
  platformFee       Decimal      @db.Decimal(15, 2) // = TotalPrice * Ratio
  ownerEarning      Decimal      @db.Decimal(15, 2) // = TotalPrice - PlatformFee
  
  status            RentalStatus @default(PENDING_PAYMENT)
  
  startOdometer     Int?
  endOdometer       Int?
  evidences         RentalEvidence[]
  
  cancelReason      String?
  
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  deletedAt         DateTime?    // Soft delete (ít dùng, thường là Cancelled)

  renter       User          @relation("RenterRentals", fields: [renterId], references: [id])
  owner        User          @relation("OwnerRentals", fields: [ownerId], references: [id])
  vehicle      Vehicle       @relation(fields: [vehicleId], references: [id])
  transactions Transaction[] 
  reviews      Review[]
  dispute      Dispute?
  chat         Chat?         // Cuộc hội thoại cho đơn thuê này

  @@index([renterId])
  @@index([ownerId])
  @@index([status])
  @@index([startDate, endDate]) 
  @@map("rentals")
}

model RentalEvidence {
  id        String       @id @default(cuid())
  rentalId  String
  url       String
  type      EvidenceType 
  order     Int          @default(0) // Thứ tự ảnh (quan trọng cho UI slider)
  note      String?      
  createdAt DateTime     @default(now())
  
  rental    Rental       @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  @@map("rental_evidences")
}

// ==================== MONEY & TRANSACTIONS ====================

model Transaction {
  id              String            @id @default(cuid())
  rentalId        String
  userId          String            
  
  amount          Decimal           @db.Decimal(15, 2)
  currency        String            @default("VND")
  type            TransactionType   
  status          TransactionStatus @default(PENDING)
  description     String?
  
  stripeIntentId  String?           @unique 
  stripeTransferId String?          // Không unique để support retry/batching
  stripeRefundId  String?
  
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?         // Soft delete

  rental          Rental            @relation(fields: [rentalId], references: [id])
  user            User              @relation(fields: [userId], references: [id])
  
  @@index([rentalId])
  @@index([stripeIntentId])
  @@map("transactions")
}

model Dispute {
  id          String        @id @default(cuid())
  rentalId    String        @unique
  reason      String
  status      DisputeStatus @default(OPEN)
  
  description String?       @db.Text
  adminNotes  String?
  
  resolvedBy  String?       // Admin ID
  resolvedAt  DateTime?
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?
  
  rental      Rental   @relation(fields: [rentalId], references: [id])
  @@map("disputes")
}

// ==================== REVIEW & LOGGING ====================

model Review {
  id        String     @id @default(cuid())
  rentalId  String
  type      ReviewType // Xác định chiều review
  
  authorId  String     // Người viết
  revieweeId String    // Người bị đánh giá (User Profile)
  vehicleId String?    // Xe bị đánh giá (Chỉ có nếu type = RENTER_TO_VEHICLE)
  
  rating    Int        @default(5)
  content   String?
  isHidden  Boolean    @default(false) // Admin ẩn đánh giá
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  rental    Rental     @relation(fields: [rentalId], references: [id])
  author    User       @relation("ReviewAuthor", fields: [authorId], references: [id])
  reviewee  User       @relation("ReviewTarget", fields: [revieweeId], references: [id])
  vehicle   Vehicle?   @relation(fields: [vehicleId], references: [id])
  
  @@unique([rentalId, authorId, type]) // Một người chỉ đánh giá 1 lần/chiều cho 1 đơn
  @@index([vehicleId])
  @@index([revieweeId])
  @@map("reviews")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String
  type      NotificationType
  data      Json?            
  isRead    Boolean          @default(false)
  readAt    DateTime?        // Thời điểm đọc
  createdAt DateTime         @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
  @@map("notifications")
}

model DeviceToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  platform  String   // 'ios' | 'android' | 'web'
  deviceId  String?  // Optional device identifier
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("device_tokens")
}

model AuditLog {
  id          String      @id @default(cuid())
  actorId     String?     // Người thực hiện (ID của User/Admin) - Null nếu là System
  action      AuditAction // Tạo, Cập nhật, Xóa, Duyệt, Từ chối, Đăng nhập
  
  targetId    String?     // ID đối tượng (RentalID, VehicleID...)
  targetType  AuditTargetType // Đơn thuê, Xe, Người dùng, Thanh toán, Hệ thống
  
  ipAddress   String?     // IP address của người dùng
  userAgent   String?     // User agent của người dùng
  metadata    Json?       // Lưu { field: "oldValue", to: "newValue" }
  
  createdAt   DateTime    @default(now())

  actor       User?       @relation("AuditActor", fields: [actorId], references: [id])
  @@index([targetId, targetType])
  @@index([actorId])
  @@map("audit_logs")
}

// ==================== FILES ====================

model UserFile {
  id          String   @id @default(cuid())
  userId      String
  key         String   // S3 object key
  url         String   // Public or signed URL base
  size        Int?
  contentType String?
  folder      String?  // Logical folder (e.g. 'kyc', 'avatar', 'vehicles')

  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([folder])
  @@map("user_files")
}

// ==================== FAVORITES ====================

model VehicleFavorite {
  id        String   @id @default(cuid())
  userId    String
  vehicleId String
  
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([userId, vehicleId]) // Một user chỉ có thể favorite một xe 1 lần
  @@index([userId])
  @@index([vehicleId])
  @@map("vehicle_favorites")
}

// ==================== CHAT & MESSAGES ====================

model Chat {
  id        String   @id @default(cuid())
  rentalId String   @unique // Mỗi rental có 1 chat duy nhất
  renterId  String   // Người thuê xe
  ownerId   String   // Chủ xe
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  rental    Rental   @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  messages  Message[]
  renter    User     @relation("RenterChats", fields: [renterId], references: [id])
  owner     User     @relation("OwnerChats", fields: [ownerId], references: [id])
  
  @@index([renterId])
  @@index([ownerId])
  @@index([rentalId])
  @@map("chats")
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  senderId  String   // Người gửi tin nhắn
  content   String   @db.Text
  isRead    Boolean   @default(false) // Đã đọc chưa
  readAt    DateTime? // Thời điểm đọc
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender    User     @relation(fields: [senderId], references: [id])
  
  @@index([chatId, createdAt]) // Index để query messages theo chat và thời gian
  @@index([senderId])
  @@index([isRead])
  @@map("messages")
}