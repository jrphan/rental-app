# ===========================================
# LOCATION SERVICE - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3006
SERVICE_NAME=location-service

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Database for Location Service
MONGO_HOST=localhost
MONGO_PORT=27019
MONGO_DB=rental_location
MONGO_USERNAME=admin
MONGO_PASSWORD=mongodb_password_123
MONGO_CONNECTION_STRING=mongodb://admin:mongodb_password_123@localhost:27019/rental_location

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis for location caching and real-time updates
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=5

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_MAPS_GEOCODING_API_KEY=your_google_geocoding_api_key

# OpenStreetMap Configuration (Alternative)
OSM_NOMINATIM_URL=https://nominatim.openstreetmap.org

# ===========================================
# LOCATION CONFIGURATION
# ===========================================
# Location tracking settings
LOCATION_UPDATE_INTERVAL_SECONDS=30
LOCATION_ACCURACY_THRESHOLD_METERS=10
MAX_LOCATION_HISTORY_DAYS=30

# Geofencing configuration
GEOFENCE_RADIUS_METERS=100
GEOFENCE_CHECK_INTERVAL_SECONDS=60

# Location services
ENABLE_REAL_TIME_TRACKING=true
ENABLE_LOCATION_HISTORY=true
ENABLE_GEOFENCING=true

# ===========================================
# BUSINESS LOGIC CONFIGURATION
# ===========================================
# Vehicle tracking
VEHICLE_TRACKING_ENABLED=true
VEHICLE_SPEED_LIMIT_KMH=120
VEHICLE_IDLE_TIMEOUT_MINUTES=30

# Location privacy settings
LOCATION_DATA_RETENTION_DAYS=90
ANONYMIZE_LOCATION_DATA=false

# ===========================================
# API CONFIGURATION
# ===========================================
API_GATEWAY_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# WebSocket configuration for real-time updates
WS_PORT=3006
WS_PATH=/location-updates

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Location data encryption
LOCATION_ENCRYPTION_KEY=your_location_encryption_key_32_chars
ENABLE_LOCATION_ENCRYPTION=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOCATION_LOG_LEVEL=debug

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=2000
RATE_LIMIT_LOCATION_UPDATES_PER_MINUTE=60
