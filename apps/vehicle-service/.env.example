# ===========================================
# VEHICLE SERVICE - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3002
SERVICE_NAME=vehicle-service

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database for Vehicle Service
DATABASE_URL=postgresql://vehicle_user:vehicle_password_123@localhost:5433/rental_vehicle
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=rental_vehicle
POSTGRES_USER=vehicle_user
POSTGRES_PASSWORD=vehicle_password_123

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis for caching vehicle data
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=1

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================
# MinIO for vehicle images and documents
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=minio_password_123
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET_NAME=vehicle-images

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Google Maps API for location services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Image processing service
IMAGE_PROCESSING_SERVICE_URL=http://localhost:3008

# ===========================================
# API CONFIGURATION
# ===========================================
API_GATEWAY_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# ===========================================
# BUSINESS LOGIC CONFIGURATION
# ===========================================
# Vehicle status update intervals (in minutes)
VEHICLE_STATUS_UPDATE_INTERVAL=5
VEHICLE_LOCATION_UPDATE_INTERVAL=1

# Maximum file upload size (in MB)
MAX_FILE_SIZE_MB=10

# Allowed image formats
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=combined

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
