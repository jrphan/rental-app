{
  "name": "my-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "nx start rental-mobile",
    "mobile:ios": "nx run-ios rental-mobile",
    "mobile:android": "nx run-android rental-mobile",
    "mobile:web": "nx serve rental-mobile",
    "backend": "nx serve backend",
    "build": "nx build backend",
    "build:all": "nx run-many --target=build --all",
    "prisma:generate": "cd apps/backend && npx prisma generate",
    "prisma:push": "cd apps/backend && npx prisma db push",
    "prisma:studio": "cd apps/backend && npx prisma studio",
    "db:setup": "pnpm run prisma:generate && pnpm run prisma:push"
  },
