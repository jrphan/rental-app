generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER MANAGEMENT ====================

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  phone              String?  @unique
  password           String
  isActive           Boolean  @default(true)
  isVerified         Boolean  @default(false)
  isPhoneVerified    Boolean  @default(false) // Xác minh số điện thoại qua SMS
  role               UserRole @default(RENTER)
  stripeAccountId    String?  @unique // Stripe Connected Account ID
  stripeAccountStatus String? // 'active', 'restricted', 'pending', 'disabled'
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relations
  profile          UserProfile?
  vehicles         Vehicle[]
  rentals          Rental[]       @relation("RenterRentals")
  ownedRentals     Rental[]       @relation("OwnerRentals")
  reviews          Review[]
  receivedReviews  Review[]       @relation("ReceivedReviews")
  notifications    Notification[]
  messages         Message[]      @relation("SenderMessages")
  receivedMessages Message[]      @relation("ReceiverMessages")
  payments         Payment[]
  otps             Otp[]
  ownerApplication OwnerApplication?
  kyc              Kyc?
  disputes         Dispute[]      @relation("RenterDisputes")
  resolvedDisputes Dispute[]      @relation("AdminDisputes")
  reviewedKycs     Kyc[]          @relation("AdminReviewedKycs")

  @@index([email])
  @@index([phone])
  @@index([isActive])
  @@index([isPhoneVerified])
  @@index([role])
  @@index([stripeAccountId])
  @@index([createdAt])
  @@map("users")
}

model Otp {
  id        String   @id @default(cuid())
  userId    String
  code      String   @db.VarChar(6)
  type      OtpType  @default(EMAIL_VERIFICATION)
  phone     String?  // Số điện thoại được xác minh (cho PHONE_VERIFICATION)
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([code])
  @@index([type])
  @@index([phone])
  @@index([isUsed])
  @@index([expiresAt])
  @@map("otps")
}

model UserProfile {
  id          String    @id @default(cuid())
  userId      String    @unique
  firstName   String
  lastName    String
  avatar      String?
  dateOfBirth DateTime?
  gender      Gender?
  bio         String?
  address     String?
  cityId      String?
  zipCode     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  city City? @relation(fields: [cityId], references: [id])

  @@index([cityId])
  @@index([createdAt])
  @@map("user_profiles")
}

// ==================== VEHICLE MANAGEMENT ====================

model VehicleType {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  icon        String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  vehicles Vehicle[]

  @@index([isActive])
  @@index([createdAt])
  @@map("vehicle_types")
}

model Vehicle {
  id            String       @id @default(cuid())
  ownerId       String
  vehicleTypeId String
  brand         String
  model         String
  year          Int
  color         String
  licensePlate  String       @unique
  engineSize    Float? // CC
  fuelType      FuelType     @default(PETROL)
  transmission  Transmission @default(MANUAL)
  mileage       Int          @default(0)
  description   String?
  dailyRate     Decimal      @db.Decimal(10, 2)
  hourlyRate    Decimal?     @db.Decimal(10, 2)
  depositAmount Decimal      @db.Decimal(10, 2)
  isAvailable   Boolean      @default(true)
  isActive      Boolean      @default(true)
  status        VehicleStatus @default(DRAFT)
  location      String? // Current location
  latitude      Float?
  longitude     Float?
  cityId        String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  owner       User           @relation(fields: [ownerId], references: [id])
  vehicleType VehicleType    @relation(fields: [vehicleTypeId], references: [id])
  city        City?          @relation(fields: [cityId], references: [id])
  images      VehicleImage[]
  rentals     Rental[]
  reviews     Review[]

  @@index([ownerId])
  @@index([vehicleTypeId])
  @@index([isAvailable])
  @@index([isActive])
  @@index([status])
  @@index([cityId])
  @@index([latitude, longitude])
  @@index([dailyRate])
  @@index([createdAt])
  @@map("vehicles")
}

model VehicleImage {
  id        String   @id @default(cuid())
  vehicleId String
  url       String
  alt       String?
  isPrimary Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())

  // Relations
  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@index([vehicleId])
  @@index([isPrimary])
  @@index([order])
  @@map("vehicle_images")
}

// ==================== RENTAL MANAGEMENT ====================

model Rental {
  id                String       @id @default(cuid())
  renterId          String
  ownerId           String
  vehicleId         String
  startDate         DateTime
  endDate           DateTime
  totalDays         Int
  totalHours        Int?
  dailyRate         Decimal      @db.Decimal(10, 2)
  hourlyRate        Decimal?     @db.Decimal(10, 2)
  subtotal          Decimal      @db.Decimal(10, 2)
  serviceFee        Decimal      @db.Decimal(10, 2)
  totalAmount       Decimal      @db.Decimal(10, 2)
  depositAmount     Decimal      @db.Decimal(10, 2)
  status            RentalStatus @default(PENDING)
  pickupLocation    String?
  returnLocation    String?
  pickupLatitude    Float?
  pickupLongitude   Float?
  returnLatitude    Float?
  returnLongitude   Float?
  // Check-in/Check-out tracking
  renterCheckInAt   DateTime?
  ownerCheckInAt    DateTime?
  renterCheckOutAt  DateTime?
  ownerCheckOutAt   DateTime?
  notes             String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  // Relations
  renter   User      @relation("RenterRentals", fields: [renterId], references: [id])
  owner    User      @relation("OwnerRentals", fields: [ownerId], references: [id])
  vehicle  Vehicle   @relation(fields: [vehicleId], references: [id])
  payments Payment[]
  reviews  Review[]
  disputes Dispute[]

  @@index([renterId])
  @@index([ownerId])
  @@index([vehicleId])
  @@index([status])
  @@index([startDate])
  @@index([endDate])
  @@index([createdAt])
  @@map("rentals")
}

// ==================== PAYMENT MANAGEMENT ====================

model Payment {
  id            String          @id @default(cuid())
  rentalId      String
  userId        String
  amount        Decimal         @db.Decimal(10, 2)
  currency      String          @default("VND")
  paymentMethod PaymentMethod
  type          PaymentType?    // CHARGE, REFUND, TRANSFER, PAYOUT
  status        PaymentStatus   @default(PENDING)
  transactionId String?         @unique // PaymentIntent ID, Refund ID, hoặc Transfer ID
  gateway       PaymentGateway?
  gatewayData   Json?           // Lưu refundId, transferId, paymentIntentId, etc.
  description   String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  // Relations
  rental Rental @relation(fields: [rentalId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@index([rentalId])
  @@index([userId])
  @@index([status])
  @@index([type])
  @@index([paymentMethod])
  @@index([transactionId])
  @@index([createdAt])
  @@map("payments")
}

// ==================== LOCATION MANAGEMENT ====================

model City {
  id        String   @id @default(cuid())
  name      String
  province  String
  country   String   @default("Vietnam")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relations
  users    UserProfile[]
  vehicles Vehicle[]

  @@unique([name, province])
  @@index([isActive])
  @@index([province])
  @@index([country])
  @@map("cities")
}

// ==================== REVIEW & RATING ====================

model Review {
  id         String   @id @default(cuid())
  rentalId   String
  reviewerId String
  revieweeId String
  vehicleId  String
  rating     Int // 1-5 stars
  comment    String?
  isPublic   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  rental   Rental  @relation(fields: [rentalId], references: [id])
  reviewer User    @relation(fields: [reviewerId], references: [id])
  reviewee User    @relation("ReceivedReviews", fields: [revieweeId], references: [id])
  vehicle  Vehicle @relation(fields: [vehicleId], references: [id])

  @@unique([rentalId, reviewerId])
  @@index([reviewerId])
  @@index([revieweeId])
  @@index([vehicleId])
  @@index([rating])
  @@index([isPublic])
  @@index([createdAt])
  @@map("reviews")
}

// ==================== NOTIFICATION & MESSAGING ====================

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

model Message {
  id         String      @id @default(cuid())
  senderId   String
  receiverId String
  rentalId   String?
  content    String
  type       MessageType @default(TEXT)
  isRead     Boolean     @default(false)
  createdAt  DateTime    @default(now())

  // Relations
  sender   User @relation("SenderMessages", fields: [senderId], references: [id])
  receiver User @relation("ReceiverMessages", fields: [receiverId], references: [id])

  @@index([senderId])
  @@index([receiverId])
  @@index([rentalId])
  @@index([isRead])
  @@index([createdAt])
  @@map("messages")
}

// ==================== OWNER APPLICATION ====================

model OwnerApplication {
  id        String                 @id @default(cuid())
  userId    String                 @unique
  status    OwnerApplicationStatus @default(PENDING)
  notes     String?
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([createdAt])
  @@map("owner_applications")
}

// ==================== KYC MANAGEMENT ====================

model Kyc {
  id              String      @id @default(cuid())
  userId          String      @unique
  idNumber        String?     // Số CMND/CCCD
  idCardFrontUrl  String?     // URL mặt trước CMND/CCCD
  idCardBackUrl   String?     // URL mặt sau CMND/CCCD
  driverLicenseUrl String?    // URL bằng lái xe
  selfieUrl       String?     // URL selfie với CMND/CCCD
  notes           String?     // Ghi chú từ user
  status          KycStatus   @default(PENDING)
  reviewedBy      String?     // Admin ID đã xem xét
  reviewedAt      DateTime?
  reviewNotes     String?     // Ghi chú từ admin khi duyệt/từ chối
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewer User? @relation("AdminReviewedKycs", fields: [reviewedBy], references: [id])

  @@index([userId])
  @@index([status])
  @@index([reviewedBy])
  @@index([createdAt])
  @@map("kycs")
}

// ==================== DISPUTE MANAGEMENT ====================

model Dispute {
  id            String         @id @default(cuid())
  rentalId      String
  renterId      String
  ownerId       String
  reason        String         // Lý do tranh chấp
  description   String?        // Mô tả chi tiết
  status        DisputeStatus  @default(PENDING)
  penaltyAmount Decimal?       @db.Decimal(10, 2) // Số tiền phạt (từ tiền cọc)
  resolvedBy    String?        // Admin ID đã xử lý
  resolvedAt    DateTime?
  resolutionNotes String?      // Ghi chú của Admin
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relations
  rental   Rental @relation(fields: [rentalId], references: [id])
  renter   User   @relation("RenterDisputes", fields: [renterId], references: [id])
  resolver User?  @relation("AdminDisputes", fields: [resolvedBy], references: [id])

  @@index([rentalId])
  @@index([renterId])
  @@index([ownerId])
  @@index([status])
  @@index([resolvedBy])
  @@index([createdAt])
  @@map("disputes")
}

// ==================== STRIPE WEBHOOK EVENTS ====================

model StripeWebhookEvent {
  id        String   @id @default(cuid())
  eventId   String   @unique // Stripe event ID (evt_...)
  type      String   // Event type (payment_intent.succeeded, etc.)
  processed Boolean  @default(false)
  data      Json?    // Event data (optional, for debugging)
  error     String?  // Error message if processing failed
  createdAt DateTime @default(now())
  processedAt DateTime?

  @@index([eventId])
  @@index([type])
  @@index([processed])
  @@index([createdAt])
  @@map("stripe_webhook_events")
}

// ==================== ENUMS ====================

enum UserRole {
  RENTER
  OWNER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum FuelType {
  PETROL
  ELECTRIC
  HYBRID
}

enum Transmission {
  MANUAL
  AUTOMATIC
  SEMI_AUTOMATIC
}

enum RentalStatus {
  PENDING
  CONFIRMED
  ACTIVE
  COMPLETED
  CANCELLED
  DISPUTED
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  E_WALLET
  CASH
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentGateway {
  VNPAY
  MOMO
  ZALOPAY
  STRIPE
  PAYPAL
}

enum NotificationType {
  RENTAL_REQUEST
  RENTAL_CONFIRMED
  RENTAL_CANCELLED
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  REVIEW_RECEIVED
  MESSAGE_RECEIVED
  SYSTEM_ANNOUNCEMENT
  DISPUTE_CREATED
  DISPUTE_RESOLVED
}

enum MessageType {
  TEXT
  IMAGE
  LOCATION
  SYSTEM
}

enum OwnerApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum VehicleStatus {
  DRAFT
  SUBMITTED
  VERIFIED
  REJECTED
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  PHONE_VERIFICATION
}

enum PaymentType {
  CHARGE   // Thanh toán từ Renter
  REFUND   // Hoàn tiền cho Renter
  TRANSFER // Chuyển tiền cho Owner
  PAYOUT   // Payout từ Stripe (nếu cần track)
}

enum DisputeStatus {
  PENDING   // Đang chờ xử lý
  UNDER_REVIEW // Admin đang xem xét
  RESOLVED  // Đã xử lý xong
  CANCELLED // Đã hủy
}

enum KycStatus {
  PENDING   // Đang chờ admin duyệt
  APPROVED  // Đã được duyệt
  REJECTED  // Bị từ chối
}
