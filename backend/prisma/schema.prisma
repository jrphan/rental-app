generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  USER      
  ADMIN     
  SUPPORT   
}

enum VehicleStatus {
  DRAFT       
  PENDING     
  APPROVED    
  REJECTED    
  MAINTENANCE 
  HIDDEN      
}

enum LicenseType {
  A1 
  A2 
  A3 
  A4
}

enum RentalStatus {
  PENDING_PAYMENT 
  AWAIT_APPROVAL  
  CONFIRMED       
  ON_TRIP         
  COMPLETED       
  CANCELLED       
  DISPUTED        
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
  NEEDS_UPDATE
}

enum DisputeStatus {
  OPEN
  UNDER_REVIEW
  RESOLVED_REFUND
  RESOLVED_NO_REFUND
  CANCELLED
}

enum NotificationType {
  SYSTEM
  PROMOTION
  RENTAL_UPDATE
  PAYMENT
  KYC_UPDATE
}

enum TransactionType {
  DEPOSIT
  PAYMENT
  REFUND
  PAYOUT
  PENALTY
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum ReviewType {
  RENTER_TO_VEHICLE // Khách review xe (và review chủ xe gián tiếp)
  OWNER_TO_RENTER   // Chủ xe review khách
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  APPROVE
  REJECT
  LOGIN
}

enum AuditTargetType {
  RENTAL
  VEHICLE
  USER
  PAYMENT
  SYSTEM
}

enum EvidenceType {
  PICKUP_FRONT
  PICKUP_BACK
  PICKUP_LEFT
  PICKUP_RIGHT
  PICKUP_DASHBOARD
  RETURN_FRONT
  RETURN_BACK
  RETURN_LEFT
  RETURN_RIGHT
  RETURN_DASHBOARD
  DAMAGE_DETAIL
}

// ==================== USER & AUTH ====================

model User {
  id                 String    @id @default(cuid())
  phone              String    @unique 
  email              String?   @unique 
  password           String    
  fullName           String
  avatar             String?
  
  isActive           Boolean   @default(true) 
  isPhoneVerified    Boolean   @default(false)
  role               UserRole  @default(USER)
  
  // Vendor Info
  isVendor           Boolean   @default(false) 
  stripeAccountId    String?   
  stripeStatus       String?   

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  deletedAt          DateTime? // Soft delete

  // Relations
  kyc              Kyc?
  vehicles         Vehicle[]      @relation("OwnerVehicles")
  rentals          Rental[]       @relation("RenterRentals")
  ownerRentals     Rental[]       @relation("OwnerRentals")
  
  reviewsWritten   Review[]       @relation("ReviewAuthor")
  reviewsReceived  Review[]       @relation("ReviewTarget")
  
  auditLogsActed   AuditLog[]     @relation("AuditActor")
  notifications    Notification[]
  transactions     Transaction[]

  @@index([phone])
  @@index([email])
  @@map("users")
}

// ==================== KYC ====================

model Kyc {
  id              String      @id @default(cuid())
  userId          String      @unique
  
  citizenId       String?     @unique // Logic validate format ở BE
  fullNameInId    String?
  dob             DateTime?
  addressInId     String?     
  
  driverLicense   String?     @unique
  licenseType     LicenseType?
  
  idCardFront     String?
  idCardBack      String?
  licenseFront    String?
  licenseBack     String?
  selfieImg       String?     
  
  status          KycStatus   @default(PENDING)
  rejectionReason String?
  
  reviewedBy      String?     
  reviewedAt      DateTime?
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user            User        @relation(fields: [userId], references: [id])
  
  @@index([status])
  @@map("kyc_records")
}

// ==================== VEHICLE ====================

model Vehicle {
  id              String        @id @default(cuid())
  ownerId         String
  
  brand           String
  model           String
  year            Int
  color           String
  licensePlate    String        @unique 
  engineSize      Int           
  requiredLicense LicenseType   @default(A1) 
  
  cavetFront      String?       
  cavetBack       String?
  
  description     String?       @db.Text
  images          VehicleImage[]
  
  address         String        // Full text address
  district        String?       
  city            String?       
  lat             Float
  lng             Float
  
  pricePerDay     Decimal       @db.Decimal(15, 2)
  depositAmount   Decimal       @default(0) @db.Decimal(15, 2)
  instantBook     Boolean       @default(false) 
  
  status          VehicleStatus @default(DRAFT)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime?     // Soft delete

  owner           User          @relation("OwnerVehicles", fields: [ownerId], references: [id])
  rentals         Rental[]
  reviews         Review[]      // Reviews dành cho xe này
  unavailabilities VehicleUnavailability[] 

  @@index([status])
  @@index([district, city])
  @@index([lat, lng])
  @@index([pricePerDay])
  @@map("vehicles")
}

model VehicleImage {
  id        String   @id @default(cuid())
  vehicleId String
  url       String
  isPrimary Boolean  @default(false)
  order     Int      @default(0) // Sắp xếp hiển thị
  
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  @@map("vehicle_images")
}

model VehicleUnavailability {
  id        String   @id @default(cuid())
  vehicleId String
  startDate DateTime
  endDate   DateTime
  reason    String?  
  
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  @@index([vehicleId, startDate, endDate])
  @@map("vehicle_unavailabilities")
}

// ==================== RENTAL (CORE) ====================

model Rental {
  id                String       @id @default(cuid())
  renterId          String
  ownerId           String
  vehicleId         String
  
  startDate         DateTime
  endDate           DateTime
  durationMinutes   Int          // Đổi sang phút để chính xác
  
  // MONEY SNAPSHOTS (Lưu cứng mọi thứ tại thời điểm đặt)
  currency          String       @default("VND")
  pricePerDay       Decimal      @db.Decimal(15, 2) // Giá gốc
  
  deliveryFee       Decimal      @default(0) @db.Decimal(15, 2) // Phí giao xe
  discountAmount    Decimal      @default(0) @db.Decimal(15, 2) // Mã giảm giá
  
  totalPrice        Decimal      @db.Decimal(15, 2) // = (Price * Duration) + Delivery - Discount
  depositPrice      Decimal      @db.Decimal(15, 2) // Tiền cọc giữ
  
  // COMMISSION TRACKING
  platformFeeRatio  Decimal      @default(0.15) @db.Decimal(5, 4) // 0.1500 = 15%
  platformFee       Decimal      @db.Decimal(15, 2) // = TotalPrice * Ratio
  ownerEarning      Decimal      @db.Decimal(15, 2) // = TotalPrice - PlatformFee
  
  status            RentalStatus @default(PENDING_PAYMENT)
  
  startOdometer     Int?
  endOdometer       Int?
  evidences         RentalEvidence[]
  
  cancelReason      String?
  
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  deletedAt         DateTime?    // Soft delete (ít dùng, thường là Cancelled)

  renter       User          @relation("RenterRentals", fields: [renterId], references: [id])
  owner        User          @relation("OwnerRentals", fields: [ownerId], references: [id])
  vehicle      Vehicle       @relation(fields: [vehicleId], references: [id])
  transactions Transaction[] 
  reviews      Review[]
  dispute      Dispute?

  @@index([renterId])
  @@index([ownerId])
  @@index([status])
  @@index([startDate, endDate]) 
  @@map("rentals")
}

model RentalEvidence {
  id        String       @id @default(cuid())
  rentalId  String
  url       String
  type      EvidenceType 
  order     Int          @default(0) // Thứ tự ảnh (quan trọng cho UI slider)
  note      String?      
  createdAt DateTime     @default(now())
  
  rental    Rental       @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  @@map("rental_evidences")
}

// ==================== MONEY & TRANSACTIONS ====================

model Transaction {
  id              String            @id @default(cuid())
  rentalId        String
  userId          String            
  
  amount          Decimal           @db.Decimal(15, 2)
  currency        String            @default("VND")
  type            TransactionType   
  status          TransactionStatus @default(PENDING)
  description     String?
  
  stripeIntentId  String?           @unique 
  stripeTransferId String?          // Không unique để support retry/batching
  stripeRefundId  String?
  
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?         // Soft delete

  rental          Rental            @relation(fields: [rentalId], references: [id])
  user            User              @relation(fields: [userId], references: [id])
  
  @@index([rentalId])
  @@index([stripeIntentId])
  @@map("transactions")
}

model Dispute {
  id          String        @id @default(cuid())
  rentalId    String        @unique
  reason      String
  status      DisputeStatus @default(OPEN)
  
  description String?       @db.Text
  adminNotes  String?
  
  resolvedBy  String?       // Admin ID
  resolvedAt  DateTime?
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?
  
  rental      Rental   @relation(fields: [rentalId], references: [id])
  @@map("disputes")
}

// ==================== REVIEW & LOGGING ====================

model Review {
  id        String     @id @default(cuid())
  rentalId  String
  type      ReviewType // Xác định chiều review
  
  authorId  String     // Người viết
  revieweeId String    // Người bị đánh giá (User Profile)
  vehicleId String?    // Xe bị đánh giá (Chỉ có nếu type = RENTER_TO_VEHICLE)
  
  rating    Int        @default(5)
  content   String?
  isHidden  Boolean    @default(false) // Admin ẩn
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  rental    Rental     @relation(fields: [rentalId], references: [id])
  author    User       @relation("ReviewAuthor", fields: [authorId], references: [id])
  reviewee  User       @relation("ReviewTarget", fields: [revieweeId], references: [id])
  vehicle   Vehicle?   @relation(fields: [vehicleId], references: [id])
  
  @@unique([rentalId, authorId, type]) // Một người chỉ review 1 lần/chiều cho 1 đơn
  @@index([vehicleId])
  @@index([revieweeId])
  @@map("reviews")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String
  type      NotificationType
  data      Json?            
  isRead    Boolean          @default(false)
  readAt    DateTime?        // Thời điểm đọc
  createdAt DateTime         @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
  @@map("notifications")
}

model AuditLog {
  id          String      @id @default(cuid())
  actorId     String?     // Người thực hiện (User/Admin ID) - Null nếu là System
  action      AuditAction
  
  targetId    String?     // ID đối tượng (RentalID, VehicleID...)
  targetType  AuditTargetType
  
  ipAddress   String?
  userAgent   String?
  metadata    Json?       // Lưu { field: "oldValue", to: "newValue" }
  
  createdAt   DateTime    @default(now())

  actor       User?       @relation("AuditActor", fields: [actorId], references: [id])
  @@index([targetId, targetType])
  @@index([actorId])
  @@map("audit_logs")
}