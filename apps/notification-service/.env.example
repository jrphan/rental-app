# ===========================================
# NOTIFICATION SERVICE - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3005
SERVICE_NAME=notification-service

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Database for Notification Service
MONGO_HOST=localhost
MONGO_PORT=27018
MONGO_DB=rental_notifications
MONGO_USERNAME=admin
MONGO_PASSWORD=mongodb_password_123
MONGO_CONNECTION_STRING=mongodb://admin:mongodb_password_123@localhost:27018/rental_notifications

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis for notification queue management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=4

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Email Service Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@rental.com
FROM_NAME=Rental App

# SMS Service Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification Service
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Notification types and channels
ENABLED_CHANNELS=email,sms,push,in_app
DEFAULT_CHANNELS=email,in_app

# Notification templates
TEMPLATE_BASE_URL=http://localhost:3005/templates

# Retry configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
NOTIFICATION_TIMEOUT_MS=30000

# ===========================================
# QUEUE CONFIGURATION
# ===========================================
# Notification queue settings
QUEUE_NAME=notifications
QUEUE_CONCURRENCY=5
QUEUE_BATCH_SIZE=10

# ===========================================
# BUSINESS LOGIC CONFIGURATION
# ===========================================
# Notification preferences
DEFAULT_EMAIL_NOTIFICATIONS=true
DEFAULT_SMS_NOTIFICATIONS=false
DEFAULT_PUSH_NOTIFICATIONS=true

# Rate limiting for notifications
NOTIFICATION_RATE_LIMIT_PER_HOUR=100
SMS_RATE_LIMIT_PER_DAY=10

# ===========================================
# API CONFIGURATION
# ===========================================
API_GATEWAY_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=combined
NOTIFICATION_LOG_LEVEL=debug

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
