// Booking Service Prisma Schema
generator client {
    provider      = "prisma-client-js"
    output        = "../../../node_modules/.prisma/booking-client"
    binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Booking {
    id        String @id @default(cuid())
    userId    String @map("user_id")
    vehicleId String @map("vehicle_id")
    ownerId   String @map("owner_id")

    // Booking details
    startDate  DateTime @map("start_date")
    endDate    DateTime @map("end_date")
    totalDays  Int      @map("total_days")
    totalHours Int?     @map("total_hours")

    // Pricing
    pricePerDay  Decimal  @map("price_per_day")
    pricePerHour Decimal? @map("price_per_hour")
    totalAmount  Decimal  @map("total_amount")
    deposit      Decimal? @default(0)
    fees         Json? // Additional fees (insurance, delivery, etc.)

    // Status and workflow
    status        BookingStatus @default(PENDING)
    paymentStatus PaymentStatus @default(PENDING) @map("payment_status")

    // Location
    pickupLocation   String  @map("pickup_location")
    pickupAddress    String  @map("pickup_address")
    pickupLatitude   Float   @map("pickup_latitude")
    pickupLongitude  Float   @map("pickup_longitude")
    dropoffLocation  String? @map("dropoff_location")
    dropoffAddress   String? @map("dropoff_address")
    dropoffLatitude  Float?  @map("dropoff_latitude")
    dropoffLongitude Float?  @map("dropoff_longitude")

    // Additional services
    deliveryFee         Decimal? @map("delivery_fee")
    insuranceFee        Decimal? @map("insurance_fee")
    additionalDriverFee Decimal? @map("additional_driver_fee")

    // Timestamps
    confirmedAt DateTime? @map("confirmed_at")
    startedAt   DateTime? @map("started_at")
    completedAt DateTime? @map("completed_at")
    cancelledAt DateTime? @map("cancelled_at")
    createdAt   DateTime  @default(now()) @map("created_at")
    updatedAt   DateTime  @updatedAt @map("updated_at")

    // Notes and special requests
    notes              String?
    specialRequests    String? @map("special_requests")
    cancellationReason String? @map("cancellation_reason")

    // Relations
    payments     Payment[]
    reviews      Review[]
    bookingItems BookingItem[]

    @@map("bookings")
}

model BookingItem {
    id          String          @id @default(cuid())
    bookingId   String          @map("booking_id")
    type        BookingItemType
    name        String
    description String?
    quantity    Int             @default(1)
    unitPrice   Decimal         @map("unit_price")
    totalPrice  Decimal         @map("total_price")
    createdAt   DateTime        @default(now()) @map("created_at")

    // Relations
    booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

    @@map("booking_items")
}

model Payment {
    id            String        @id @default(cuid())
    bookingId     String        @map("booking_id")
    amount        Decimal
    currency      String        @default("USD")
    paymentMethod PaymentMethod @map("payment_method")
    paymentType   PaymentType   @map("payment_type")
    status        PaymentStatus @default(PENDING)

    // Payment gateway details
    transactionId   String? @map("transaction_id")
    gatewayResponse Json?   @map("gateway_response")
    failureReason   String? @map("failure_reason")

    // Timestamps
    initiatedAt DateTime  @default(now()) @map("initiated_at")
    completedAt DateTime? @map("completed_at")
    failedAt    DateTime? @map("failed_at")
    refundedAt  DateTime? @map("refunded_at")

    // Relations
    booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

    @@map("payments")
}

model Review {
    id        String @id @default(cuid())
    bookingId String @map("booking_id")
    userId    String @map("user_id")
    vehicleId String @map("vehicle_id")
    ownerId   String @map("owner_id")

    // Review details
    rating  Int // 1-5 stars
    comment String?
    images  String[] @default([])

    // Review categories
    cleanlinessRating   Int? @map("cleanliness_rating")
    communicationRating Int? @map("communication_rating")
    valueRating         Int? @map("value_rating")

    // Response
    ownerResponse   String?   @map("owner_response")
    ownerResponseAt DateTime? @map("owner_response_at")

    // Status
    isPublished Boolean @default(true) @map("is_published")
    isVerified  Boolean @default(false) @map("is_verified")

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    // Relations
    booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

    @@map("reviews")
}

model BookingStatusHistory {
    id         String         @id @default(cuid())
    bookingId  String         @map("booking_id")
    fromStatus BookingStatus? @map("from_status")
    toStatus   BookingStatus  @map("to_status")
    reason     String?
    changedBy  String         @map("changed_by")
    changedAt  DateTime       @default(now()) @map("changed_at")
    metadata   Json?

    @@map("booking_status_history")
}

enum BookingStatus {
    PENDING
    CONFIRMED
    ACTIVE
    COMPLETED
    CANCELLED
    EXPIRED
}

enum BookingItemType {
    VEHICLE_RENTAL
    INSURANCE
    DELIVERY
    ADDITIONAL_DRIVER
    CHILD_SEAT
    GPS
    EXTRA_MILEAGE
    FUEL
    CLEANING_FEE
    LATE_RETURN_FEE
    DAMAGE_FEE
    OTHER
}

enum PaymentMethod {
    CREDIT_CARD
    DEBIT_CARD
    BANK_TRANSFER
    DIGITAL_WALLET
    CASH
    CRYPTOCURRENCY
}

enum PaymentType {
    BOOKING_PAYMENT
    DEPOSIT
    REFUND
    PARTIAL_REFUND
    PENALTY
    ADDITIONAL_FEE
}

enum PaymentStatus {
    PENDING
    PROCESSING
    COMPLETED
    FAILED
    CANCELLED
    REFUNDED
    PARTIALLY_REFUNDED
}
