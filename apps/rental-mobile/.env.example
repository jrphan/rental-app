# ===========================================
# RENTAL MOBILE APP - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# APP CONFIGURATION
# ===========================================
NODE_ENV=development
APP_NAME=RentalApp
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# ===========================================
# API CONFIGURATION
# ===========================================
# API Gateway URL
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_API_VERSION=v1
EXPO_PUBLIC_API_TIMEOUT=30000

# WebSocket configuration
EXPO_PUBLIC_WS_URL=ws://localhost:3000
EXPO_PUBLIC_WS_RECONNECT_INTERVAL=5000

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# JWT configuration
EXPO_PUBLIC_JWT_STORAGE_KEY=@rental_app:jwt_token
EXPO_PUBLIC_REFRESH_TOKEN_KEY=@rental_app:refresh_token
EXPO_PUBLIC_USER_DATA_KEY=@rental_app:user_data

# OAuth configuration
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# ===========================================
# MAPS AND LOCATION CONFIGURATION
# ===========================================
# Google Maps API
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
EXPO_PUBLIC_GOOGLE_MAPS_STYLE=standard

# Location services
EXPO_PUBLIC_LOCATION_ACCURACY=high
EXPO_PUBLIC_LOCATION_TIMEOUT=10000
EXPO_PUBLIC_LOCATION_MAX_AGE=300000

# ===========================================
# PUSH NOTIFICATIONS CONFIGURATION
# ===========================================
# Firebase configuration
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# Push notification settings
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true
EXPO_PUBLIC_PUSH_NOTIFICATION_CHANNEL_ID=rental_app_notifications

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# File upload settings
EXPO_PUBLIC_MAX_FILE_SIZE=10485760
EXPO_PUBLIC_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
EXPO_PUBLIC_UPLOAD_TIMEOUT=30000

# Image processing
EXPO_PUBLIC_IMAGE_COMPRESSION_QUALITY=0.8
EXPO_PUBLIC_IMAGE_MAX_WIDTH=1024
EXPO_PUBLIC_IMAGE_MAX_HEIGHT=1024

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================
# Stripe configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
EXPO_PUBLIC_STRIPE_MERCHANT_ID=your_stripe_merchant_id

# Payment settings
EXPO_PUBLIC_DEFAULT_CURRENCY=USD
EXPO_PUBLIC_SUPPORTED_CURRENCIES=USD,EUR,GBP,VND

# ===========================================
# UI/UX CONFIGURATION
# ===========================================
# Theme configuration
EXPO_PUBLIC_THEME_MODE=light
EXPO_PUBLIC_PRIMARY_COLOR=#007AFF
EXPO_PUBLIC_SECONDARY_COLOR=#5856D6
EXPO_PUBLIC_SUCCESS_COLOR=#34C759
EXPO_PUBLIC_ERROR_COLOR=#FF3B30
EXPO_PUBLIC_WARNING_COLOR=#FF9500

# Font configuration
EXPO_PUBLIC_FONT_FAMILY=System
EXPO_PUBLIC_FONT_SIZE_SMALL=12
EXPO_PUBLIC_FONT_SIZE_MEDIUM=16
EXPO_PUBLIC_FONT_SIZE_LARGE=20

# ===========================================
# FEATURE FLAGS
# ===========================================
# Feature toggles
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# ===========================================
# ANALYTICS CONFIGURATION
# ===========================================
# Analytics services
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
EXPO_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Development settings
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_ENABLE_REACTOTRON=true

# Development API endpoints
EXPO_PUBLIC_DEV_API_URL=http://localhost:3000
EXPO_PUBLIC_STAGING_API_URL=https://staging-api.rental.com
EXPO_PUBLIC_PRODUCTION_API_URL=https://api.rental.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Security settings
EXPO_PUBLIC_ENABLE_SSL_PINNING=true
EXPO_PUBLIC_ENABLE_CERTIFICATE_PINNING=true
EXPO_PUBLIC_ENABLE_APP_SCREENSHOT_PROTECTION=true

# Encryption
EXPO_PUBLIC_ENCRYPTION_KEY=your_app_encryption_key_32_chars
EXPO_PUBLIC_ENABLE_DATA_ENCRYPTION=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Performance settings
EXPO_PUBLIC_CACHE_SIZE=50
EXPO_PUBLIC_CACHE_TTL=3600000
EXPO_PUBLIC_IMAGE_CACHE_SIZE=100
EXPO_PUBLIC_ENABLE_IMAGE_CACHING=true

# Network configuration
EXPO_PUBLIC_NETWORK_TIMEOUT=30000
EXPO_PUBLIC_NETWORK_RETRY_ATTEMPTS=3
EXPO_PUBLIC_NETWORK_RETRY_DELAY=1000
